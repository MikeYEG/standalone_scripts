<b>Location</b>: {{ $alert->location }} </br>
<b>OS</b>: {{ LibreNMS\Config::getOsSetting($alert->os, 'text') }} {{ $alert->version }} </br>

@if ($alert->hardware)
	<b>Hardware</b>: {{ $alert->hardware }} </br>
@endif

@if ($alert->state == 0)
    <b>Fault duration</b>: {{ $alert->elapsed }} </br>
@endif

